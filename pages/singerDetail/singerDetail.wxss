.imgs {
  width: 100%;
  height: 250px;
  position: relative;
}

.imgs image {
  width: 100%;
  height: 250px;
  position: absolute;
}

.imgs .text {
  position: absolute;
  margin-top: 180px;
  margin-left: 10px;
}

.text view {
  margin-bottom: 10px;
}

.text view:nth-child(1) {
  font-weight: bolder;
  font-size: 20px;
  color: white;
}

.text view:nth-child(2) {
  font-weight: lighter;
  font-size: 13px;
  color: rgb(253, 250, 250);
}

.singer {
  position: relative;
}

.singer .font {
  margin-left: 15px;
  margin-top: 10px;
  margin-bottom: 10px;
  font-size: 20px;
  font-weight: bolder;
}

.singer .produce {
  margin-left: 15px;
  margin-right: 15px;
  font-size: 13px;
  line-height: 20px;
}

.hotfont {
  margin-top: 10px;
  margin-left: 10px;
  margin-bottom: 20px;
  font-weight: bolder;
  font-size: 20px;

}

.hotsong .hot-item {
  margin: 5px;
  display: flex;
  border-bottom: 1px solid #dbd2d2;
  height: 50px;

}
.hot-item .index{
  line-height: 50px;
}
.hot-item .song-text text {
  display: inline-block;
  margin-left: 8px;
  width: 150px;
  overflow: hidden;
  white-space: nowrap;
  margin-left: 10px;
  text-overflow: ellipsis;
}
.hot-item .song-text text:nth-child(1){
  font-size: 18px;
  font-weight: 600;
}
.hot-item .song-text text:nth-child(2){
  font-size: 13px;
  font-weight: 400;
  color:#4d4d4d;
}

.hot-item image {
  width: 40px;
  height: 40px;
}