
swiper {
  width: 100%;
}

swiper swiper-item {
  width: 100%;
  height: 100%;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.hotsinger {
  font-weight: bolder;
  margin-bottom: 10px;
  margin-left: 10px;
}

.singer {
  width: 100%;
  display: flex;
  overflow: auto;
}

.singer-item {
  width: 100px;
  margin-left: 10px;
  text-align: center;
}

.singer-item image {
  width: 100px;
  height: 80px;
  border-radius: 10px;
}

.singer-item text {
  font-size: 13px;
  color: #4d4d4d;
}
.newmusic{
  font-weight: bolder;
  margin-top: 10px;
  margin-bottom: 10px;
  margin-left: 10px;
}
.new{
  width: 100%;
  height: 80px;
}
.new .new-item{
  margin:5px;
  display: flex;
  border-bottom: 1px solid #dbd2d2;
}
.new-item .left {
  width: 300px;
  overflow: hidden;
  white-space: nowrap;
  margin-left: 10px;
  text-overflow: ellipsis;
}
.left text:nth-child(1){
 display: block;
 height: 30px;
 font-weight: bolder;
}
.left text:nth-child(2){
 display: block;
  height: 20px;
  color:#4d4d4d;
  font-size: 13px;
}

.new-item image{
  width: 40px;
  height: 40px;
}
