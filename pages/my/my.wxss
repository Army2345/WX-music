page {
  width: 100%;
  height: 100%;
  background-color: black;
  /* position: relative; */
}

.bc-image {
  position: absolute;
  width: 100%;
  height: 120%;
}

.bg {
  width: 100%;
  height: 100%;
  opacity: .5;
}

.up {
  position: absolute;
  width: 100%;
  /* height: 80%; */
}

.search {
  width: 300px;
  height: 50px;
  border: 1px solid #cccccc;
  margin-top: 10px;
  margin-left: 35px;
  /* background-color: pink; */
  border-radius: 20px;
  display: flex;
}

.search input {
  width: 250px;
  height: 50px;
  /* background-color: yellow; */
  border-radius: 20px;
  margin-left: 10px;
}

.search image {
  width: 40px;
  height: 40px;
  margin-top: 5px;
  margin-left: -6px;
}
 .white{
  width: 270px;
  /* background-color: white; */
  margin-left: 50px;
  border: 1px solid #888484;
  background-color: gray;
  opacity: .7;
}
.white view{
  height: 20px;
  color:thistle;
  font-size: 15px;
  margin-top: 5px;
  margin-left: 10px;
  overflow: hidden;
	white-space: nowrap;
	margin-left: 10px;
  text-overflow: ellipsis;

}
.up .header {
  width: 120%;
  height: 80px;
  /* background-color: pink; */
  margin-top: 20px;
  line-height: 80px;
}

.header image {
  width: 50px;
  height: 50px;
  border-radius: 100%;
  vertical-align: middle;
  margin-left: 10px;
}

.header text {
  margin-left: 10px;
  color: white;
}

.mylike {
  width: 100%;
  /* background-color:pink; */
  margin-top: 20px;
  color: white;
  margin-left: 10px;
}

.likemenu {
  display: flex;
  overflow: auto;
  margin-top: 20px;
  overflow: auto;
  width: 100%;
  height: 150px;
}

.likemenu-item {
  width: 100px;
  margin-left: 15px;
  text-align: center;
}

.likemenu-item image,
.recentlist image {
  width: 100px;
  height: 100px;
  border-radius: 10px;
}

.likemenu-item text,
.recentlist view text {
  display: inline-block;
  width: 100px;
  height: 50px;
  line-height: 20px;
  text-align: center;
  color: rgb(151, 146, 146);
  font-size: 13px;
  /* background-color: green; */
}

.recentlist {
  width: 100%;
  height: 150px;
  /* background-color: pink; */
  margin-top: 15px;
  display: flex;
  overflow: auto;
}

.recentlist view {
  flex: 1;
  height: 100%;
  margin: 10px;
  /* background-color: pink; */
}



.recent {
  width: 100%;
  color: white;
  /* background-color: plum; */
  margin-top: 20px;
  margin-top: 40px;
  margin-left: 10px;
}